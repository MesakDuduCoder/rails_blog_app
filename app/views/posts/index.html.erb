<div class="posts">
  <div class="user-card">
    <div class="user-photo">
        <div class= "image-contain"></div>
    </div>
      <div class="user-name">
        <h2 class="name"><%= @user.name %></h2>
        <p class="posts-counter">Number of posts: <%= @user.posts_counter %></p>
      </div>
  </div>
  <ul class="user-posts">
    <% @posts.each do |post| %>
      <li >
        <div class="user-post">         
        <%= link_to user_post_path(@user, post), class: 'no-text-decoration' do %>
          <h2 class="user-post-content"><%= post.title %></h2>
          <p class="user-post-content"><%= post.text %></p>
          <div class="comments-likes">
              <span>Comments: <%= post.comments_counter %></span> 
              <span>Likes: <%= post.likes_counter %></span>
          </div>
        <% end %>
        
        </div>
        <ul class="user-comments">
            <% post.recent_comments.each do |comment| %>
              <li>
                <p><strong><%= comment.user.name %>:</strong> <%= comment.text %></p>
              </li>
            <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
  <%= link_to new_user_post_path(@user), class: 'add-post-btn' do %>
    Create New Post
  <% end %>
  <button>Pagination</button>
</div>
